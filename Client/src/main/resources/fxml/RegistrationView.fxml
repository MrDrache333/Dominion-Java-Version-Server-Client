<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="750.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="de.uol.swp.client.register.RegistrationPresenter">
    <stylesheets>
        <URL value="@../css/RegistrationView.css"/>
        <URL value="@../css/global.css"/>
    </stylesheets>
    <ImageView fitHeight="750.0" fitWidth="1280.0" layoutX="180.0" layoutY="227.0"
               opacity="0.9" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Image url="@../images/login_background.png"/>
    </ImageView>
    <ImageView fitHeight="305.0" fitWidth="601.0" layoutX="12.0" layoutY="-24.0"
               pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="0.0">
        <Image url="@../images/Dominion_Logo.PNG"/>
    </ImageView>
    <ImageView fitHeight="177.0" fitWidth="123.0" layoutX="385.0" layoutY="575.0"
               pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0">
        <effect>
            <ColorAdjust brightness="-0.4" contrast="-0.2" hue="-0.5"/>
        </effect>
        <Image url="@../images/knight.gif"/>
    </ImageView>
    <ImageView fitHeight="177.0" fitWidth="123.0" layoutX="750.0" layoutY="588.0"
               pickOnBounds="true" preserveRatio="true" scaleX="-1.0" AnchorPane.bottomAnchor="0.0">
        <effect>
            <ColorAdjust brightness="-0.4" contrast="-0.2" hue="-0.5"/>
        </effect>
        <Image url="@../images/knight.gif"/>
    </ImageView>
    <ImageView fitHeight="92.0" fitWidth="30.0" layoutX="478.0" layoutY="588.0"
               pickOnBounds="true" preserveRatio="true">
        <effect>
            <ColorAdjust brightness="-0.29" contrast="-0.27" saturation="0.34"/>
        </effect>
        <Image url="@../images/fire.gif"/>
    </ImageView>
    <ImageView fitHeight="534.0" fitWidth="470.0" layoutX="776.0" layoutY="206.0"
               pickOnBounds="true" preserveRatio="true" scaleY="1.3" AnchorPane.bottomAnchor="83.0"
               AnchorPane.rightAnchor="30.0">
        <Image url="@../images/Scroll_opened.png"/>
    </ImageView>
    <Label layoutX="921.0" layoutY="220.0" text="Registrieren">
        <font>
            <Font size="48.0"/>
        </font>
    </Label>
    <Button layoutX="948.0" layoutY="563.0" mnemonicParsing="false" onAction="#onRegisterButtonPressed"
            text="Absenden" textAlignment="CENTER">
        <font>
            <Font size="24.0"/>
        </font>
    </Button>
    <TextField fx:id="loginField" alignment="CENTER" blendMode="MULTIPLY" layoutX="868.0" layoutY="312.0"
               promptText="Benutzername">
        <font>
            <Font size="24.0"/>
        </font>
    </TextField>
    <Hyperlink layoutX="914.0" layoutY="608.0" onAction="#onCancelButtonPressed"
               text="Ich habe bereits einen Account" textFill="#6f6400">
        <font>
            <Font size="15.0"/>
        </font>
    </Hyperlink>
    <TextField fx:id="mailField" alignment="CENTER" blendMode="MULTIPLY" layoutX="868.0" layoutY="365.0"
               promptText="E-Mail">
        <font>
            <Font size="24.0"/>
        </font>
    </TextField>
    <PasswordField fx:id="passwordField1" alignment="CENTER" blendMode="MULTIPLY" layoutX="868.0" layoutY="445.0"
                   promptText="Passwort">
        <font>
            <Font size="24.0"/>
        </font>
    </PasswordField>
    <PasswordField fx:id="passwordField2" alignment="CENTER" blendMode="MULTIPLY" layoutX="868.0" layoutY="497.0"
                   promptText="Passwort wiederholen">
        <font>
            <Font size="24.0"/>
        </font>
    </PasswordField>
</AnchorPane>
