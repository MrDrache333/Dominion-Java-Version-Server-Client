<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="chatViewAnchorPane" minHeight="300.0" minWidth="300.0"
            prefHeight="500.0" prefWidth="400.0" stylesheets="@../css/ChatViewPresenter.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal">
    <VBox alignment="CENTER" minHeight="400.0" minWidth="300.0" prefHeight="400.0" prefWidth="300.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <Label fx:id="titleLabel" alignment="CENTER" maxHeight="30.0" minHeight="30.0" minWidth="100.0"
               mouseTransparent="true" prefHeight="30.0" text="GLOBAL CHAT" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="5.0" top="5.0"/>
            </padding>
            <font>
                <Font name="Arial Bold" size="15.0"/>
            </font>
        </Label>
        <ListView fx:id="messageView" minHeight="100.0" minWidth="300.0" prefHeight="400.0" prefWidth="300.0"
                  VBox.vgrow="ALWAYS">
        </ListView>
        <HBox maxHeight="40.0" minHeight="40.0" minWidth="260.0" VBox.vgrow="NEVER">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
            <TextField fx:id="chatTextField" maxHeight="30.0" minHeight="30.0" minWidth="170.0" prefHeight="30.0"
                       promptText="Was mÃ¶chtest du sagen?" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </TextField>
            <Button defaultButton="true" maxHeight="30.0" maxWidth="90.0" minHeight="30.0" minWidth="90.0"
                    mnemonicParsing="false" onAction="#onSendChatButtonPressed" text="Senden" HBox.hgrow="NEVER"/>
        </HBox>
    </VBox>
</AnchorPane>
