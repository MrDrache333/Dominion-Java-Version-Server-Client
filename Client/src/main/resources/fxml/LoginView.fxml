    </ImageView>
    <ImageView fitHeight="177.0" fitWidth="123.0" layoutX="385.0" layoutY="575.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0">
        <effect>
            <ColorAdjust brightness="-0.4" contrast="-0.2" hue="-0.5" />
        </effect>
        <Image url="@../images/knight.gif" />
    </ImageView>
    <ImageView fitHeight="177.0" fitWidth="123.0" layoutX="750.0" layoutY="588.0" pickOnBounds="true" preserveRatio="true" scaleX="-1.0" AnchorPane.bottomAnchor="0.0">
