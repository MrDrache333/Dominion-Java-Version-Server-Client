            <ColorAdjust brightness="-0.4" contrast="-0.2" hue="-0.5" />
        </effect>
        <Image url="@../images/knight.gif" />
    </ImageView>
    <ImageView fitHeight="552.0" fitWidth="470.0" layoutX="776.0" layoutY="206.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="83.0" AnchorPane.rightAnchor="30.0">
        <Image url="@../images/Scroll_opened.png" />
    </ImageView>
    <Label layoutX="934.0" layoutY="267.0" text="Anmelden">
        <font>
            <Font size="48.0" />
        </font>
    </Label>
    <HBox alignment="CENTER_LEFT" layoutX="868.0" layoutY="359.0" prefHeight="46.0" prefWidth="295.0" spacing="7.0">
        <children>
            <ImageView fitHeight="35.0" fitWidth="37.0" opacity="0.7" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
                <image>
                    <Image url="@../images/login_knight_icon.png" />
                </image>
            </ImageView>
            <TextField fx:id="userField" blendMode="MULTIPLY" promptText="Benutzername">
                <font>
                    <Font size="24.0" />
                </font>
            </TextField>
        </children>
    </HBox>
    <HBox alignment="CENTER_LEFT" layoutX="868.0" layoutY="415.0" prefHeight="45.0" prefWidth="295.0" spacing="5.0">
        <children>
            <ImageView fitHeight="30.0" fitWidth="36.0" opacity="0.7" pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
                <image>
                    <Image url="@../images/login_lock_icon.png" />
                </image>
            </ImageView>
            <PasswordField fx:id="passwordField" blendMode="MULTIPLY" promptText="Passwort">
                <font>
                    <Font size="24.0" />
                </font>
            </PasswordField>
        </children>
    </HBox>
    <Button fx:id="LoginButton" defaultButton="true" layoutX="948.0" layoutY="505.0" mnemonicParsing="false" onAction="#onLoginButtonPressed" text="Absenden" textAlignment="CENTER">
