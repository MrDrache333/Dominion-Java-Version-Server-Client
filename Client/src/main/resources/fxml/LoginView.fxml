<AnchorPane cache="true" cacheHint="SPEED" prefHeight="750.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uol.swp.client.auth.LoginPresenter">
    <stylesheets>
        <URL value="@../css/LoginView.css" />
