        </font>
    </Hyperlink>
    <ImageView fitHeight="92.0" fitWidth="30.0" layoutX="478.0" layoutY="588.0" pickOnBounds="true" preserveRatio="true">
        <effect>
            <ColorAdjust brightness="-0.29" contrast="-0.27" saturation="0.34" />
        </effect>
        <Image url="@../images/fire.gif" />
    </ImageView>
    <ImageView fitHeight="102.0" fitWidth="82.0" layoutX="606.0" layoutY="502.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/brunnen.gif" />
        </image>
        <effect>
            <ColorAdjust brightness="0.27" contrast="-0.29" />
        </effect>
    </ImageView>
</AnchorPane>
