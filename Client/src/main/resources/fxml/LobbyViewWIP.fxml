<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.Integer?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="lobbyViewWIP" prefHeight="750.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/8.0.999-ea">
    <children>
        <ImageView fitHeight="750.0" fitWidth="1280.0" pickOnBounds="true">
            <image>
                <Image url="@../images/wood_texture_background.jpg"/>
            </image>
            <viewport>
                <Rectangle2D height="1000.0" width="1000.0"/>
            </viewport>
        </ImageView>
        <VBox prefHeight="750.0" prefWidth="300.0" style="-fx-border-width: 0,7; -fx-border-color: white;">
            <children>
                <VBox maxHeight="453.0" maxWidth="300.0" minHeight="453.0" minWidth="300.0" opacity="0.73" prefHeight="453.0" prefWidth="300.0" style="-fx-background-color: #3D3D3D;">
                    <children>
                        <Label fx:id="settingOwner" text="Einstellungen:" textFill="WHITE">
                            <HBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </HBox.margin>
                            <VBox.margin>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <HBox prefHeight="18.0" prefWidth="300.0">
                            <children>
                                <Label fx:id="maxSettingOwner" text="Max. Spieler:" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
                                    </HBox.margin>
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                </Label>


                                <ChoiceBox fx:id="chooseMaxPlayer" onAction="#onMaxPlayerSelected" prefHeight="25.0" prefWidth="92.0">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <Integer fx:value="2" />
                                            <Integer fx:value="3" />
                                            <Integer fx:value="4" />
                                        </FXCollections>
                                    </items>
                                    <HBox.margin>
                                        <Insets left="63.0" />
                                    </HBox.margin>
                                </ChoiceBox>
                            </children>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="5.0" top="5.0"/>
                            </padding>
                        </HBox>

                        <VBox prefHeight="303.0" prefWidth="300.0" spacing="20">
                            <children>
                                <Label text="Persönliche Einstellungen:" textFill="WHITE">
                                    <VBox.margin>
                                        <Insets bottom="15.0" right="15.0"/>
                                    </VBox.margin>
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                </Label>

                                <Button fx:id="readyButton" mnemonicParsing="false" onAction="#onReadyButtonPressed"
                                        prefHeight="31.0" prefWidth="419.0" text="Bereit">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Button>
                                <Button fx:id="gamesettingsButton" alignment="CENTER" mnemonicParsing="false"
                                        prefHeight="31.0" prefWidth="419.0" text="Spieleinstellungen"
                                        onAction="#onGamesettingsButtonPressed" visible="false">
                                    <font>
                                        <Font size="15.0"/>
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="5.0" left="15.0" right="15.0" top="75.0" />
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="181.0" prefWidth="300.0">
                    <children>
                        <ListView fx:id="usersView" maxWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" opacity="0.73" prefHeight="181.0" prefWidth="300.0" style="-fx-background-color: #3D3D3D;">

                        </ListView>
                    </children>
                </HBox>
                <HBox opacity="0.73" prefHeight="115.0" prefWidth="300.0" style="-fx-background-color: #3D3D3D;">
                    <children>
                        <Button fx:id="giveUpButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                                onAction="#onLeaveLobbyButtonPressed" prefHeight="40.0" prefWidth="118.0"
                                text="Lobby Verlassen">
                            <HBox.margin>
                                <Insets bottom="37.5" left="91.0" right="91.0" top="37.5"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
        <HBox fx:id="lobbyHBox" layoutX="300.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="750.0" prefWidth="980.0" spacing="20" nodeOrientation="RIGHT_TO_LEFT"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <Pane fx:id="chatView" maxHeight="630.0" maxWidth="450.0" minHeight="630.0" minWidth="400.0"
                      nodeOrientation="LEFT_TO_RIGHT" prefHeight="630.0" prefWidth="450.0">
                    <VBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0"/>
                    </VBox.margin>
                </Pane>
                <VBox fx:id="gameSettingsVBox" spacing="20" prefWidth="450" prefHeight="630" visible="false">
                    <children>
                        <ScrollPane fx:id="scrollPane" prefHeight="500" prefWidth="620" maxWidth="620"
                                    style="-fx-background-color: #3D3D3D" opacity="0.73"
                                    nodeOrientation="LEFT_TO_RIGHT">
                            <TilePane fx:id="choosableCards" prefHeight="500" prefWidth="500" maxWidth="500"
                                      vgap="10" hgap="10" style="-fx-background-color: #3D3D3D"/>
                        </ScrollPane>
                        <TilePane fx:id="chosenCards" prefWidth="400" prefHeight="160"
                                  style="-fx-background-color: #3D3D3D"
                                  opacity="0.5" nodeOrientation="LEFT_TO_RIGHT">
                            <children>
                                <TextFlow fx:id="textFlow" prefHeight="50" prefWidth="200" textAlignment="CENTER">
                                    <children>
                                        <Text text="Wähle Karten aus..." fill="white" style="-fx-font-size: 24"/>
                                    </children>
                                </TextFlow>
                            </children>
                        </TilePane>
                        <Button fx:id="sendCards" text="Auswahl abschicken" prefWidth="450" prefHeight="31"
                                visible="false"
                                onAction="#sendChosenCards"/>
                    </children>
                </VBox>
            </children>
        </HBox>
        <ImageView fx:id="bigCardImage" preserveRatio="true" fitWidth="250" layoutY="100" layoutX="400"
                   visible="false"/>
    </children>
</AnchorPane>
