<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="anchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="280.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fx:id="background" fitHeight="500.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="34.0">
        <Image url="@../images/burgHohenzollern.jpg"/>
    </ImageView>
    <HBox fx:id="showResults" alignment="CENTER" opacity="0.7" prefHeight="20" prefWidth="450.0" spacing="20"
          style="-fx-background-color: black" AnchorPane.topAnchor="0.0">
    </HBox>
    <ImageView fx:id="bannerDrawing" fitWidth="300.0" layoutX="40.0" layoutY="120.0" preserveRatio="true" rotate="-2.7">
        <Image url="@../images/bannerDrawing.png"/>
    </ImageView>
    <HBox fx:id="bannerTextBox" alignment="CENTER" layoutX="80.0" layoutY="160.0" prefWidth="180">
        <Text fx:id="bannerText" style="-fx-font-size: 18" text="Du hast gewonnen!">
        </Text>
    </HBox>
    <HBox fx:id="bannerTextSmallBox" alignment="CENTER" layoutX="75" layoutY="195" prefWidth="185">

        <Text fx:id="bannerTextSmall" style="-fx-font-size: 12" text="Herzlichen Glückwunsch.">
        </Text>
    </HBox>
    <ImageView fx:id="trophy" fitWidth="35.0" layoutX="250.0" layoutY="160.0" preserveRatio="true" visible="true">
        <Image url="@../images/trophy.png"/>
    </ImageView>
    <HBox alignment="BASELINE_RIGHT" layoutX="265.0" layoutY="245.0" prefHeight="20" prefWidth="150" spacing="7.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <Button defaultButton="true" layoutX="280.0" layoutY="250.0" mnemonicParsing="false"
                    onAction="#onAgainButtonPressed" text="nochmal"/>
            <Button layoutX="355.0" layoutY="250.0" mnemonicParsing="false" onAction="#onReturnButtonPressed"
                    text="aufhören"/>
        </children>
    </HBox>
</AnchorPane>
