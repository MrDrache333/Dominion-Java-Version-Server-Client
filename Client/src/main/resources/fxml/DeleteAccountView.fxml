<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="250.0" prefWidth="450.0"
            xmlns="http://javafx.com/javafx/11.0.1">
    <stylesheets>
        <URL value="@../css/global.css"/>
        <URL value="@../css/DeleteAccountPresenter.css"/>
    </stylesheets>
    <ImageView fitHeight="250.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../images/deleteAcccountBackground.png"/>
        </image>
    </ImageView>
    <VBox alignment="CENTER" prefHeight="250.0" prefWidth="450.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" prefHeight="100.0" prefWidth="450.0"
               text="Möchtest du deinen Account wirklich löschen? " textAlignment="CENTER" textFill="WHITE"
               wrapText="true" VBox.vgrow="ALWAYS">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="60.0" prefWidth="450.0" spacing="50.0"
              VBox.vgrow="NEVER">
            <children>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#onYesButtonPressed" prefHeight="50.0"
                        prefWidth="70.0" text="Ja">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#onNoButtonPressed" prefHeight="50.0"
                        prefWidth="70.0" text="Nein">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="5.0"/>
            </VBox.margin>
        </HBox>
    </VBox>
</AnchorPane>
